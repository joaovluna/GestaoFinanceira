<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recyclerview_finance"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_fab_createFinance"
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#000000"
        android:clickable="true"
        android:contentDescription="Adicionar Receita"
        android:foreground="@drawable/savemoney_foreground"
        app:backgroundTint="@color/pink_200"
        app:layout_constraintBottom_toBottomOf="@+id/main_recyclerview_finance"
        app:layout_constraintEnd_toEndOf="@+id/main_recyclerview_finance"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/main_recyclerview_finance"
        app:layout_constraintTop_toTopOf="@+id/main_recyclerview_finance"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/dark_header" />

</androidx.constraintlayout.widget.ConstraintLayout>